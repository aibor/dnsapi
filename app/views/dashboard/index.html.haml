.jumbotron.text-center
  %h1
    DNS API Dashboard
    = button_to t('c.refresh'), "/#{I18n.locale}", class: "btn btn-primary", method: :get

%h3
  PowerDNS Status
  - if @pdns_pid.blank?
    %span.label.label-danger= t('.pdns_not_running')
  - else
    %span.label.label-success= t('.pdns_running')

%h3= t('.recently_changed_records')
= render partial: "records/records", locals: {records: @records}

