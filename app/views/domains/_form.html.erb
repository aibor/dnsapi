<div class="row">
  <div class="col-md-6">
    <%= form_for @domain, html: {role: :form} do |f| %>
      <% if @domain.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@domain.errors.count, "error") %> prohibited this domain from being saved:</h2>

          <ul>
            <% @domain.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, t('domains.columns.name') %><br>
        <%= f.text_field :name, maxlength: 255, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :master, t('domains.columns.master') %><br>
        <%= f.text_field :master, maxlength: 255, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :type, t('domains.columns.type') %><br>
        <%= f.select :type, %w( MASTER NATIVE SLAVE ), {}, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :account, t('domains.columns.account') %><br>
        <%= f.text_field :account, maxlength: 255, class: 'form-control' %>
      </div>
      <div class="actions pull-right">
        <%= button_tag type: 'reset', class: 'btn btn-default' do %>
          Reset
        <% end %>
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
