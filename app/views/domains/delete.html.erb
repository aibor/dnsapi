
<p id="notice"><%= notice %></p>

<h1>
  <%= t('.title') %> <%= @domain.name %>
</h1>

<div class="alert alert-warning"><%= t('.warning') %></div>

<h3>
  <%= t('.records') %>
</h3>
<%= render partial: "records/records",
  locals: {
  records: @domain.records.type_sort,
  no_links: true,
  page: (@records_page > 1) ? @records_page : nil } 
%>

<h3>
  <%= t '.cryptokeys' %>
</h3>
<%= render partial: "cryptokeys/cryptokeys",
  locals: {cryptokeys: @domain.cryptokeys}
%>

<hr>


<%= button_to t('c.delete'), (@domain),
  class: "btn btn-primary", method: :delete
%>
