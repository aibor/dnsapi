<h1>Listing records</h1>

<table class="table">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Name</th>
      <th>Type</th>
      <th>Content</th>
      <th>Ttl</th>
      <th>Prio</th>
      <th>Ordername</th>
      <th>Auth</th>
      <th>Change date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.domain %></td>
        <td><%= record.name %></td>
        <td><%= record.type %></td>
        <td><%= record.content %></td>
        <td><%= record.ttl %></td>
        <td><%= record.prio %></td>
        <td><%= record.ordername %></td>
        <td><%= record.auth %></td>
        <td><%= record.change_date %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

