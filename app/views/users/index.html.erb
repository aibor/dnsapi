<h1>
  <%= t('.users') %>
  <%= button_to t('c.new'), new_user_path, class: "btn btn-primary", method: :get %>
</h1>

<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning">
    <%= alert %>
  </div>
<% end %>
<% if @current_user.errors.any? %>
  <div class="alert alert-danger">
    <%= @current_user.errors.messages %>
  </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>
        <%= t('users.columns.username') %>
      </th>

      <th>
        <%= t('users.columns.admin') %>
      </th>

      <th>
        <%= t('users.columns.created') %>
      </th>

      <th>
        <%= t('users.columns.updated') %>
      </th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%#= link_to user.username, user, title: t('.show', user: user.username) %>
          <%= user.username %>
        </td>

        <td>
          <span class="<%= user.admin ? 'glyphicon glyphicon-ok' : '' %>">
        </td>
        
        <td>
          <%= l user.created_at, format: :short %>
        </td>

        <td>
          <%= l user.updated_at, format: :short %>
        </td>

        <td>
          <%= link_to edit_user_path(user),
            title: t('.edit', user: user.username) do %>
              <span class="glyphicon glyphicon-edit"></span>
          <% end %>
        </td>

        <td>
          <%= link_to delete_user_path(user),
            title: t('.delete', user: user.username) do %>
              <span class="glyphicon glyphicon-remove"></span>
          <% end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
